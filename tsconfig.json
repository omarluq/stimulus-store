{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true, // Generates declaration files
    "declarationDir": "./dist", // Output directory for declaration files
    "outDir": "./dist", // Output directory for JavaScript files
    "allowSyntheticDefaultImports": true,
    "noEmit": false, // Set to false to allow emitting JavaScript files
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": false, // Set to false for project compilation
    "moduleResolution": "node", // Use Node.js-style module resolution
    "baseUrl": ".", // Set the base URL for module resolution
    "paths": {
      // Add any custom paths or module mappings here if needed
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src", "global-types.d.ts"]
}