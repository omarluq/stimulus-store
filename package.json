{
  "name": "stimulus-store",
  "types": "dist/src/index.d.ts",
  "version": "0.0.1-beta",
  "description": "Lightweight state management for Stimulus.js",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/omarluq/stimulus-store.git"
  },
  "bugs": {
    "url": "https://github.com/omarluq/stimulus-store/issues"
  },
  "homepage": "https://github.com/omarluq/stimulus-store#readme",
  "files": [
    "dist/",
    "CHANGELOG.md"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "test": "jest --reporters default jest-stare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "code-size": "npx size-limit",
    "gzip-size": "gzip-size ./dist/index.js",
    "changelog": "git-chglog -o CHANGELOG.md",
    "husky:prepare": "husky install"
  },
  "keywords": [
    "stimulus",
    "store",
    "stimulusjs",
    "state-management",
    "javascript",
    "frontend",
    "web-development",
    "client-side",
    "data-store",
    "mvc",
    "stimulus-controller"
  ],
  "author": "Omar Luq <omaralanii@outlook.com>",
  "contributors": [
    "Tomas Caraccia"
  ],
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@hotwired/stimulus": "^3.2.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@size-limit/preset-small-lib": "^11.0.0",
    "@types/jest": "^29.5.10",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "gzip-size": "^7.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-stare": "^2.5.1",
    "prettier": "^3.1.0",
    "rollup": "^4.5.1",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sizes": "^1.0.6",
    "rollup-plugin-typescript2": "^0.36.0",
    "size-limit": "^11.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "jest-stare": {
    "resultDir": ".jest-stare"
  },
  "size-limit": [
    {
      "path": "./dist/index.js"
    }
  ],
  "private": false
}
